<div class="container">
  <% if post.errors.any? %>
  <ul>
    <% post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @post, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Post" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :content, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :content, rows: 10, class: "form-control shadow rounded", placeholder: "Content of Post" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg shadow rounded" %>
      </div>
      
      <% end %>
    </div>
    <%= link_to "[ Cancel and Retrun to posts listing ]", posts_path, class: "text-info" %>
  </div>
</div>