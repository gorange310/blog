<h2 class="text-center mt-4"><%= @post.title %></h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4 shadow mb-5 bg-white rounded">
      <div class="card text-center">
        <div class="card-header font-italic">
          by <%= @post.user.username if @post.user %>
        </div>
        <div class="card-body">
          <div class="card-text text-left"><%= simple_format(@post.content) %></div>
          <%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-info" %>
          <%= link_to "Delete", @post, method: :delete, class: "btn btn-outline-danger", data: { confirm: "確認刪除文章？" } %>
        </div>
        <div class="card-footer text-muted">
          <small>
            Created <%= time_ago_in_words(@post.created_at) %> ago,
            edited <%= time_ago_in_words(@post.updated_at) %> ago
          </small>
        </div>
      </div>
    </div>
  </div>
</div>