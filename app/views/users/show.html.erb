<h1 class="text-center mt-4"><%= @user.username %></h1>
<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  </div>
<% end %>

<div class="digg_pagination row justify-content-center">
  <%= will_paginate @posts, :container => false %>
</div>

<h3 class="text-center mt-4">Posts</h3>

<%= render 'posts/post', posts: @posts %>

<div class="digg_pagination row justify-content-center">
  <%= will_paginate @posts, :container => false %>
</div>