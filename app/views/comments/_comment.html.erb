<div class="row justify-content-center">
  <div class="col-12 mt-3">
    <%= form_with(model: @comment, class: "shadow p-2 bg-secondary rounded", local: true, url: post_comments_path(@post)) do |f| %>
    <div class="form-group row">
      <div class="col-12">
        <%= f.text_field :content, class: "form-control shadow rounded", placeholder: "Write a Comment..." %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.submit "Post", class: "btn p-1 btn-outline-light btn-sm" %>
    </div> 
    <% end %>
    <%= render 'shared/errors', obj: @comment %>
  </div>
</div>
